<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:background="@drawable/edit_text_squared"
    android:paddingLeft="20dp"
    android:paddingTop="20dp"
    android:paddingRight="5dp"
    android:paddingBottom="20dp">

    <LinearLayout
        android:id="@+id/ll_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <TextView
            android:id="@+id/heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Ghulam Rabani &amp; Sons Traders &amp; Distributors"
            android:textColor="@color/rv_box_color"
            android:textSize="@dimen/rv_box_heading_size" />

        <ImageButton
            android:id="@+id/menu_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:background="@null"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:textColor="#676a6c"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/ledger_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_heading"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/open_sans"
        android:paddingBottom="5dp"
        android:text="Ledger ID:"
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size" />

    <TextView
        android:id="@+id/ledger_id_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_heading"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/ledger_id"
        android:fontFamily="@font/open_sans_semibold"
        android:paddingBottom="5dp"
        android:text="1002312324251524"
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size" />
    <TextView
        android:id="@+id/document_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ledger_id"
        android:fontFamily="@font/open_sans"
        android:paddingBottom="5dp"
        android:text="Document Type: "
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size" />

    <TextView
        android:id="@+id/document_type_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ledger_id"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/document_type"
        android:paddingBottom="5dp"
        android:text="Invoice"
        android:fontFamily="@font/open_sans_semibold"
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size" />
    <TextView
        android:id="@+id/date_ledger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/document_type"
        android:fontFamily="@font/open_sans"
        android:paddingBottom="5dp"
        android:text="Date: "
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size" />

    <TextView
        android:id="@+id/date_ledger_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/document_type"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/date_ledger"
        android:fontFamily="@font/open_sans_semibold"
        android:paddingBottom="5dp"
        android:text="17/05/2020"
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size" />

    <TextView
        android:id="@+id/transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_ledger"
        android:fontFamily="@font/open_sans"
        android:paddingBottom="5dp"
        android:text="Debit Amount: "
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size" />

    <TextView
        android:id="@+id/transaction_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/date_ledger"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/transaction"
        android:fontFamily="@font/open_sans_semibold"
        android:paddingBottom="5dp"
        android:text="Rs. 50,000.00"
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size" />



    <TextView
        android:id="@+id/balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/transaction"
        android:fontFamily="@font/open_sans"
        android:paddingBottom="5dp"
        android:text="Balance:"
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size" />

    <TextView
        android:id="@+id/balance_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/transaction"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/balance"
        android:fontFamily="@font/open_sans_semibold"
        android:paddingBottom="5dp"
        android:text="Rs. 600,000.00"
        android:textColor="@color/rv_box_color"
        android:textSize="@dimen/rv_box_text_size" />

</RelativeLayout>